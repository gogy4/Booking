@model CustomerEditViewModel

@{
    var message = ViewBag.Message as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-info">@message</div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<h2>Редактировать данные пользователя</h2>

<form method="post" asp-action="EditUserData" asp-controller="ProfileView">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="FirstName" />
    <input type="hidden" asp-for="LastName" />
    <input type="hidden" asp-for="FirstName" />
    <input type="hidden" asp-for="PhoneNumber" />
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="OldPassword" />
    <input type="hidden" asp-for="NewPassword" />
    <input type="hidden" asp-for="ConfirmPassword" />



    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input type="text" class="form-control" asp-for="FirstName" required />
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input type="text" class="form-control" asp-for="LastName" required />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input type="text" class="form-control" asp-for="PhoneNumber" required />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="email" class="form-control" asp-for="Email" required />
    </div>

    <div class="form-group">
        <label asp-for="OldPassword"></label>
        <input type="password" class="form-control" asp-for="OldPassword" required />
    </div>

    <div class="form-group">
        <label asp-for="NewPassword"></label>
        <input type="password" class="form-control" asp-for="NewPassword" />
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>

<script>
    document.getElementById('NewPassword').addEventListener('input', function () {
        var confirmPasswordField = document.getElementById('ConfirmPassword');
        confirmPasswordField.required = this.value.trim() !== "";
    });
</script>
