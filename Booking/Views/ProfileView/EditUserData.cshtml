@model CustomerEditViewModel

@{
    var message = ViewBag.Message as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-info">@message</div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<h2>Редактировать данные пользователя</h2>

<form method="post" asp-action="EditUserData" asp-controller="ProfileView">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName">Имя:</label>
        <input type="text" class="form-control" asp-for="FirstName" value="@Model.FirstName" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Фамилия:</label>
        <input type="text" class="form-control" asp-for="LastName" value="@Model.LastName" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Номер телефона:</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" value="" placeholder="Введите номер телефона" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Электронная почта:</label>
        <input type="email" class="form-control" asp-for="Email" value="" placeholder="Введите email" />
    </div>

    <div class="form-group">
        <label asp-for="OldPassword">Старый пароль:</label>
        <input type="password" class="form-control" asp-for="OldPassword" required />
    </div>

    <div class="form-group">
        <label asp-for="NewPassword">Новый пароль:</label>
        <input type="password" class="form-control" asp-for="NewPassword" />
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword">Подтверждение пароля:</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>
