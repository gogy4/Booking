@model Domain.Entities.Room

@{
    ViewData["Title"] = $"Комната №{Model.Number}";
}

<h2 class="text-center">Комната №@Model.Number</h2>

<div class="container mt-4">
    <div class="row">
        <!-- Левая колонка с изображением -->
        <div class="col-md-4 d-flex align-items-center justify-content-center">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Изображение комнаты" class="img-fluid rounded" style="max-width: 100%; height: auto;">
            }
        </div>

        <!-- Центральная колонка с описанием -->
        <div class="col-md-4">
            <h4>Описание</h4>
            <p>@Model.FullDescription</p>
        </div>

        <!-- Правая колонка с деталями комнаты -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Детали комнаты</h4>
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Тип комнаты:</strong> @Model.RoomType</li>
                        <li class="list-group-item"><strong>Цена за ночь:</strong> @Model.PricePerNight ₽</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<a href="@Context.Request.Headers["Referer"]" class="btn btn-secondary mt-3">Назад</a>