@model Domain.Entities.Booking

@{
    ViewData["Title"] = "Детали бронирования";
}

<h2>Детали бронирования</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Бронирование № @Model.Id</h4>
        <ul class="list-group">
            <li class="list-group-item"><strong>Дата начала:</strong> @Model.StartDate.ToShortDateString()</li>
            <li class="list-group-item"><strong>Дата окончания:</strong> @Model.EndDate.ToShortDateString()</li>
            <li class="list-group-item"><strong>Статус:</strong> @Model.Status</li>
            <li class="list-group-item"><strong>Количество гостей:</strong> @Model.Customers.Count</li>
        </ul>
    </div>
</div>

<a href="@Url.Action("Index", "BookingView")" class="btn btn-secondary mt-3">Назад к списку</a>